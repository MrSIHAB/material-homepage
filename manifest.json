{
  "name": "Material Homepage",
  "manifest_version": 3,
  "version": "2.1.2",
  "description": "Minimal, focused and professional Homepage",
  "action": {
    "default_icon": "/images/logo/mh-64.png"
  },
  "icons": {
    "32": "/images/logo/mh-32.png",
    "64": "/images/logo/mh-64.png",
    "128": "/images/logo/mh-128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "materialhome@mrsihab.github.io"
    }
  },
  "permissions": ["favicon", "storage"],
  "optional_host_permissions": ["https://suggestqueries.google.com/*"],
  "web_accessible_resources": [
    {
      "resources": ["_favicon/*"],
      "matches": ["<all_urls>"],
      "extension_ids": ["*"]
    }
  ]
}
